<?xml version="1.0" encoding="utf-8"?>
<com.shaopeng.base.TitleBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title"
    android:background="@drawable/layer_down_common_range_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title_bar_back"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:padding="3dp"
            android:src="@mipmap/search_back" />

        <TextView
            android:id="@+id/tv_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_title_bar_back"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#666"
            tools:text="取消" />


        <!--            android:layout_toLeftOf="@id/tv_title_bar_right"
                    android:layout_toRightOf="@id/tv_title_bar_left"-->
        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:singleLine="true"
            android:textColor="#2d2d2d"
            android:textSize="17sp"
            tools:text="标题" />


        <TextView
            android:id="@+id/tv_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textColor="#666"
            android:textSize="15sp"
            tools:text="保存" />
    </RelativeLayout>

</com.shaopeng.base.TitleBarView>